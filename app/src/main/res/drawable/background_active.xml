<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size android:height="0dp" />
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/item_radius"/>
            <stroke
                android:width="2dp"
                android:color="@color/orangeLight"/>
        </shape>
    </item>

    <item
        android:height="35dp"
        android:gravity="bottom"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="rectangle">
            <size android:height="30dp" />
            <solid android:color="@color/orangeLight" />
            <stroke
                android:width="1dp"
                android:color="@color/orangeAccent"/>
            <corners
                android:radius="@dimen/item_radius"/>
        </shape>
    </item>

</layer-list>